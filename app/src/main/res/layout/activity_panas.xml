<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/White"
    tools:context=".PanasActivity">

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart = "true"
        android:id="@+id/panasRadioGroup"
        >

        <ImageView
            android:id="@+id/demamImageView"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/demam" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textColor="#000000"
            android:layout_marginLeft="15dp"
            android:textSize="23dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Apakah suhu tubuh anda panas? (diatas 37.5 derajat celcius)"
            android:id="@+id/panasTextView"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="#000000"
            android:layout_marginLeft="23dp"
            android:text="Ya"
            android:textSize="23dp"
            android:id="@+id/yaPanasRb"
            android:checked="false"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="#000000"
            android:layout_marginLeft="23dp"
            android:text="Tidak"
            android:textSize="23dp"
            android:id="@+id/tdkPanasRb"
            android:checked="false"
            />

        <Button
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="NEXT"
            android:textSize="17dp"
            android:textStyle="bold"
            android:id="@+id/nextPanasBtn"
            android:layout_gravity="center_horizontal"
            />

    </RadioGroup>


</LinearLayout>